<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/layout_rounded_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/topImage"
        android:layout_width="118dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/applogoblack" />

    <TextView
        android:id="@+id/textviewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Välkommen till FoodHero!"
        android:textAlignment="center"
        android:textColor="@color/background_dark"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textviewDescription"
        android:layout_below="@id/textviewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Mat till dörren har aldrig varit enklare!"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/background_dark"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewDescription"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/userLoginLayout"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/userSignUpLayout"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:background="@drawable/rounded_corner_black"
            android:orientation="horizontal"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-light"
                android:text="      Logga in"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/userLoginButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="2dp"
                android:background="@drawable/rounded_corner_black"
                android:src="@drawable/baseline_arrow_right_24" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/enterAsGuestLayout"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/userLoginLayout"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_filter_state"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="       Fortsätt som gäst.."
                android:textColor="@color/black"
                android:textSize="17sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/userEnterAsGuestButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="2dp"
                android:background="@drawable/button_white"
                android:src="@drawable/baseline_arrow_right_24" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/userSignUpLayout"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:background="@drawable/rounded_corner_black"
            android:orientation="horizontal"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-light"
                android:text="      Bli medlem"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/userSignUpButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="2dp"
                android:background="@drawable/rounded_corner_black"
                android:src="@drawable/baseline_arrow_right_24" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

</RelativeLayout>